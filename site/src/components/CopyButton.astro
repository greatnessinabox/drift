---
/**
 * A copy-to-clipboard button that attaches to <pre> code blocks.
 * Include once on any page â€” it auto-wires all <pre> blocks via JS.
 */
---

<script>
  // Auto-attach copy buttons to every <pre> block on the page
  document.querySelectorAll('pre').forEach(pre => {
    // Skip if already has a copy button
    if (pre.querySelector('.copy-code-btn')) return;

    // Make pre relative for absolute positioning
    pre.style.position = 'relative';

    const btn = document.createElement('button');
    btn.className = 'copy-code-btn absolute top-3 right-3 text-text-muted hover:text-green transition-all cursor-pointer hover:scale-110 opacity-0 group-hover:opacity-100 focus:opacity-100';
    btn.setAttribute('aria-label', 'Copy code to clipboard');
    btn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></svg>';

    // Add group class to pre for hover reveal
    pre.classList.add('group');

    btn.addEventListener('click', () => {
      const code = pre.querySelector('code');
      const text = (code || pre).textContent || '';
      // Strip leading "$ " prompt characters
      const clean = text.split('\n').map(l => l.replace(/^\$\s+/, '')).join('\n').trim();
      navigator.clipboard.writeText(clean);

      btn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>';
      btn.classList.add('text-green');
      setTimeout(() => {
        btn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></svg>';
        btn.classList.remove('text-green');
      }, 2000);
    });

    pre.appendChild(btn);
  });
</script>
